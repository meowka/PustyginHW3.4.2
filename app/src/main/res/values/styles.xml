<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:textColor">@color/colorAccentGreen</item>
        <item name="android:windowBackground">@color/colorBackgroundGreen</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:textColor">@color/colorAccentBlue</item>
        <item name="android:windowBackground">@color/colorBackgroundBlue</item>
    </style>

    <style name="AppTheme.Black">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:windowBackground">@color/colorBackgroundBlack</item>
    </style>

    <style name="SmallMargin" parent="AppTheme">
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="MiddleMargin" parent="AppTheme">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="LargeMargin" parent="AppTheme">
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
